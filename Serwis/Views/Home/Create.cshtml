@model Serwis.Models.Domains.Order

<div class="container">
    <h2>Tworzenie nowego zamówienia</h2>
    <form method="post" asp-action="Create">
         <div class="text-danger" asp-validation-summary="ModelOnly"></div>
       
        <div class="form-group row mt-3">
            <div class="col-3">
                <label asp-for=@Model.Name></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for=@Model.Name>
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
            
        </div>

        <div class="form-group row mt-3">
            <div class="col-6">
                <button type="submit" class=" btn btn-primary form-control">Zatwierdź</button>
            </div>
            <div class="col-6">
                <a type ="button" class="btn btn-secondary form-control" asp-action="Service">Powrót</a>
            </div>
        </div>

    </form>




</div>