@page
@model IdentityRazor.Pages.Account.LoginModel
@{
}
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div form-group row>
            <div class="col-3">
                <label asp-for="Credential.UserName"></label> <!--wazne aby własciwosci mialy odpowiedni poziom dostepu-->
            </div>
            <div class=" col-5">
                 <input type="text" asp-for="Credential.UserName" class="form-control">
                 <span class="text-danger" asp-validation-for="Credential.UserName"></span>
            </div>
        </div>
         <div form-group row>
            <div class="col-3">
                <label asp-for="Credential.Password"></label> <!--wazne aby własciwosci mialy odpowiedni poziom dostepu-->
            </div>
            <div class=" col-5">
                 <input type="password" asp-for="Credential.Password" class="form-control">
                 <span class="text-danger" asp-validation-for="Credential.Password"></span>
            </div>
            <div class="row form-check mb-2 mt-2">
                <div class="col-2 ">
                    <input type="checkbox" asp-for="Credential.RememberMe" class="form-check-input" />
                    <label asp-for="Credential.RememberMe" class="form-check-label"></label>
                </div>
            </div>
             <div form-group row>
            <div class="col-4">
                <input type="submit" value="Login" class="btn btn-primary mt-3  " />
            </div>
            <div class=" col-4">
            </div>
        </div>
        </div>
    </form>
</div>